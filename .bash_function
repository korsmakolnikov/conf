#!/bin/sh

#FUNCTIONS
function dir_stats () {
  if [ -z "$1" ]                                                    # Is parameter #1 zero length?
   then
     echo "-Parameter #1 is zero length.-"                          # Or no parameter passed.
     return 1
   else
     #find $1 -type f | sed 's/.*\.//' | sort | uniq -c
     eval "find $1 -type f | sed 's/.*\.//' | sort | uniq -c"
     return 0
   fi
}

function git_up () {
    CBRANCH=`git branch | grep \* | cut -d ' ' -f2`
    echo -e "\033[1mpush force with lease local branch ${CBRANCH} to origin/${CBRANCH}\033[0m"
    git push --force-with-lease origin $CBRANCH
}

function git_down () {
    CBRANCH=`git branch | grep \* | cut -d ' ' -f2`
    echo -e "\033e[1mpull local branch from origin/${CBRANCH}\033[0m"
    git pull origin $CBRANCH --rebase
}

function who_on_port () {
    sudo lsof -i tcp:$1
}

export -f who_on_port
export -f git_up
export -f git_down
export -f dir_stats
